<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/digicar</property>
        <property name="connection.username">dev</property>
        <property name="connection.password">digicar</property>
        <property name="connection.pool_size">10</property>
        <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>

        <mapping class="fr.digicar.model.Car"/>
        <mapping class="fr.digicar.model.CarType"/>
        <mapping class="fr.digicar.model.FuelType"/>
        <mapping class="fr.digicar.model.ParkingSpot"/>
        <mapping class="fr.digicar.model.Tarif"/>
        <mapping class="fr.digicar.model.TransmissionMode"/>
        <mapping class="fr.digicar.model.User"/>
    </session-factory>
</hibernate-configuration>